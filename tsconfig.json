{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "server",
    "allowJs": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["client", "node_modules", "dist", "build"]
}
